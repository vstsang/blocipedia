<div class="container">
  <div class='row col-md-6 col-md-offset-3'>
    <div class='text-center'>
      <br>
      <h1>All Wikis</h1>
      <br>
    </div>
    <table class='table table-striped'>
      <div class="media">
        <div class="media-body">
          <tbody>
            <% @wikis.each do |wiki| %>
              <% if (!wiki.private?) || (wiki.private? && (current_user == wiki.user)) || (wiki.private? && (current_user.admin?))%>
                <tr>
                  <h4 class="media-heading">
                    <td><%= link_to wiki.title, wiki %></td>
                  </h4>

                  <td>
                    <% if wiki.private? %>
                      <span class="glyphicon glyphicon-lock"></span>
                    <% end %>
                  </td>

                  <td><%= link_to "Edit", edit_wiki_path(wiki.id), class: 'btn btn-success' %></td>
                  <td><%= link_to "Delete", wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </div>
      </div>
    </table>
    <div class='text-center'>
      <br>
      <%= link_to "New wiki", new_wiki_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
